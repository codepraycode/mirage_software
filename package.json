{
  "name": "mirage_software",
  "version": "0.1.0",
  "description": "A software to ease school work[",
  "main": "./public/electron.js",
  "author": "codepraycode",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/codepraycode/mirage_software"
  },
  "scripts": {
    "react:start": "webpack-dev-server --mode development --hot",
    "react:build": "webpack --mode production",
    "start": "concurrently -k \"cross-env BROWSER=none yarn react:start\" \"wait-on http://localhost:8090 && electronmon .\"",
    "package:win": "yarn react:build && electron-builder build --win --publish never",
    "deploy:win": "yarn react:build && electron-builder build --win --publish always "
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.5",
    "date-fns": "^2.29.2",
    "electron-devtools-installer": "^3.2.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.2.1",
    "moment": "^2.29.4",
    "nedb-promises": "^6.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "sass": "^1.54.8",
    "sass-loader": "^13.0.2",
    "sharp": "^0.30.7"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.3.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^20.1.1",
    "electron-builder": "^23.3.3",
    "electronmon": "^2.0.2",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.1",
    "wait-on": "^6.0.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.1"
  },
  "build": {
    "appId": "com.miragesoftware.app",
    "copyright": "Copyright Â© 2021 codepraycode",
    "productName": "Mirage Software",
    "publish": {
      "provider": "github",
      "owner": "codepraycode",
      "repo": "mirage_software"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "extraMetadata":{
      "main":"build/electron.js"
    },
    "extends":null,
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/icon.ico"
    },
    "linux": {
      "target": "deb"
    }
  }
}
